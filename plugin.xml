<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any">
            <command
                  commandId="ca.mcgill.cs.dscribe.commands.runDScribe"
                  mnemonic="S">
                  <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate
				                 ifEmpty="false">
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.name" value="*.java" />
				             </adapt>
				            </iterate>
				           </with>
         		</visibleWhen>
            </command>
        
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
         <command
            name="Run DScribe"
            id="ca.mcgill.cs.dscribe.commands.runDScribe">
      </command>
   </extension>   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ca.mcgill.cs.dscribe.handlers.RunDScribe"
            commandId="ca.mcgill.cs.dscribe.commands.runDScribe">
      </handler>
   </extension>
</plugin>
